= form_for @entried_position do |f|
  - if @entried_position.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entried_position.errors.count, "error")} prohibited this entried_position from being saved:"
      %ul
        - @entried_position.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :entry
    = f.text_field :entry
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :owner_id
    = f.number_field :owner_id
  .actions
    = f.submit 'Save'
